<section class="three-box-layout">
	<div class="heading">
		<h2>Audio</h2>
	</div>
	<div class="container">
		<% let displayedItems = 0; for (item of product) { if (displayedItems >= 3){ break; } %> 
		<% if (item.tag === 'audio') { displayedItems++; %>
		<div class="sale-box">
			<img src="<%= item.image %>" alt="" />
			<div>
				<h3><%= item.title %></h3>
				<p>$ <%= item.price %></p>
			</div>
		</div>
		<% } } %>
	</div>
</section>