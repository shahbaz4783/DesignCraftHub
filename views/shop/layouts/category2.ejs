<section class="shop-category">
	<div class="heading">
		<h2>Wearables</h2>
	</div>
	<div class="container">
		<% let displayedItems = 0; for (item of product) { if (displayedItems >= 4){ break; } %> 
		<% if (item.tag === 'wearables') { displayedItems++; %>
		<a href="/products/<%= item.id %>" class="sale-box">
			<img src="<%= item.image %>" alt="" />
			<div>
				<h3><%= item.title %></h3>
				<p>$ <%= item.price %></p>
			</div>
		</a>
		<% } } %>
	</div>
</section>