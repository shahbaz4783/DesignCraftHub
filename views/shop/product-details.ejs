<%- include('../partials/dochead') %> <%- include('../partials/navigation') %>
<main class="product-info">
	<section class="basic-details">
		<aside>
			<img src="<%= info.image %>" alt="" />
		</aside>
		<article>
			<h2><%= info.title %></h2>
			<p><%= info.description %></p>
			<h3>$ <%= info.price %></h3>
		</article>
	</section>
	<article class="shop-info">
		<div class="info-container">
			<div class="price"><h3>$ <%= info.price %></h3></div>
			<div class="btn-actions">
				<form action="/cart" method="post">
					<input type="hidden" name="productID" value="<%= info.id %>" />
					<input type="submit" name="cart" id="cart" value="Add to cart" />
				</form>
				<form action="/checkout" method="post">
					<input type="hidden" name="productID" value="<%= info.id %>" />
					<input type="submit" name="checkout" id="checkout" value="Buy Now" />
				</form>
			</div>
		</div>
	</article>
</main>
<%- include('../partials/footer') %> <%- include('../partials/docbottom') %>
